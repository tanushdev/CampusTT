{
    "version": 2,
    "builds": [
        {
            "src": "run.py",
            "use": "@vercel/python"
        },
        {
            "src": "frontend/public/**/*",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "run.py"
        },
        {
            "src": "/auth/(.*)",
            "dest": "run.py"
        },
        {
            "src": "/(index.html|dashboard.html|college-admin-dashboard.html|super-admin-dashboard.html)",
            "dest": "frontend/public/$1"
        },
        {
            "src": "/css/(.*)",
            "dest": "frontend/public/css/$1"
        },
        {
            "src": "/js/(.*)",
            "dest": "frontend/public/js/$1"
        },
        {
            "src": "/",
            "dest": "frontend/public/index.html"
        }
    ],
    "env": {
        "FLASK_ENV": "production"
    }
}